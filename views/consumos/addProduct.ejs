<% layout('./layouts/base') %>
<form action="/consumos/detalle/addProduct" class="validated-form" method="POST" novalidate>
    <input type="hidden" name="idConsumo" value="<%= idConsumo %>">
    <div class="row">
        <% for(let categoria of categorias){ %>
            <div class="col-3" style="border-right: 1px dashed #333;">
                <h4 class="mb-3"><%= categoria.nombre %></h4>
                <% for(let producto of categoria.productos){ %>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="<%= producto.nombre %>" name="productos" value="<%= producto._id %>">
                        <label class="form-check-label" for="<%= producto.nombre %>"><%= producto.nombre %></label>
                    </div>
                <% } %>  
            </div>
        <% } %> 
    </div>
    <button class="m-5 btn btn-dark">Agregar Productos</button>
</form>